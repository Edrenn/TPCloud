@using TPAzure.DAO

@model pub
@{
    ViewBag.Title = "Ajouter une pub";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("Add", "Add", new { newAdvert = Model }, FormMethod.Get, new { @class = "form-horizontal", role = "form", @style = "color: black" }))
{

    <div class="form-group">
        @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label", @style = "color: black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.price, new { @class = "col-md-2 control-label", @style = "color: black" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.price, new { @type = "number", htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.url, new { @class = "col-md-2 control-label", @style = "color: black" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.url, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.url, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ajouter" formtarget="_blank" class="btn btn-default" />
        </div>
    </div>
}
